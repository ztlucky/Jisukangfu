.list {
  margin-top: 2rpx;
}
.list .item {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.list .item .topview {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
}
.list .item .topview .imageview {
  height: 240rpx;
  width: 160rpx;
  position: relative;
}
.list .item .topview .imageview .newimage {
  height: 240rpx;
  width: 160rpx;
  -webkit-border-radius: 16rpx;
          border-radius: 16rpx;
}
.list .item .topview .imageview .liveview {
  position: absolute;
  font-size: 18rpx;
  width: 46rpx;
  height: 24rpx;
  line-height: 24rpx;
  -webkit-border-radius: 8rpx;
          border-radius: 8rpx;
  background-color: #777;
  color: #FFFFFF;
